<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="100dp"
    android:background="@color/grey">

    <TextView
        android:id="@+id/tv_foodName"
        android:layout_marginLeft="10dp"
        android:text="Bread"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white"
        android:layout_width="60dp"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/iv_foodPic"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/tv_foodName"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tv_cost"
        android:text="20$"
        android:textColor="@color/white"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_foodPic"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/btn_increment"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_cost"
        android:text="+"
        android:backgroundTint="@color/teal_200"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btn_increment"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:text="0"
        android:backgroundTint="@color/white"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/white"/>


    <Button
        android:id="@+id/btn_decrement"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_quantity"
        android:backgroundTint="@color/teal_200"
        android:text="-"
        android:textColor="@color/white" />


</RelativeLayout>